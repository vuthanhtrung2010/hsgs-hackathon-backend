# Database Configuration
# Replace with your actual PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/hsgs_hackathon?schema=public"

# Canvas LMS API Configuration
# Your Canvas instance URL (without trailing slash)
CANVAS_BASE_URL="https://your-canvas-instance.instructure.com"

# Canvas API access token (generate from Canvas Account Settings)
CANVAS_ACCESS_TOKEN="your_canvas_api_key_here"

# Default Canvas course ID to sync
COURSE_ID="your_course_id"

# Application Configuration
# Port for the server to run on
PORT=3000

# Password for manual sync endpoint (choose a secure password)
SYNC_PASSWORD="your_secure_sync_password"

# Cron Configuration
# How often to automatically sync (cron expression)
# Default: every 45 minutes
CRON_INTERVAL="*/45 * * * *"
